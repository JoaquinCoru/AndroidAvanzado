<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidAvanzado" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/dark_orange</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/green</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.AndroidAvanzado.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AndroidAvanzado.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AndroidAvanzado.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.DragonBallKeepCoding.EditText" parent="Theme.AndroidAvanzado">
        <item name="marginHorizontal">@dimen/margin_medium</item>
        <item name="android:ems">10</item>
        <item name="android:elevation">2sp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="background">@color/white</item>
    </style>

</resources>
